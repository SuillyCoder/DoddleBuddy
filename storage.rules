rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // User-specific files - organized by userId/folder/filename
    match /{userId}/{folder}/{fileName} {
      // Allow read if authenticated and it's their folder
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write if:
      // - User is authenticated
      // - Uploading to their own folder
      // - File is an image
      // - File size is under 10MB
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      
      // Allow delete if authenticated and it's their file
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Nested paths (backup for any nested structure)
    match /{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}